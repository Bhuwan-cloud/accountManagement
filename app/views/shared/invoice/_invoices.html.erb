<title>Invoices</title>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<body>

    <div class="container search-table">
        <div class="search-box">
            <div class="row">
                <div class="col-md-3">
                    <h5>Search </h5>
                </div>
                <div class="col-md-9">
                    <input type="text" id="myInput" onkeyup="myFunction()" class="form-control"
                        placeholder="Search for Invoices ">
                    <script>
                        $(document).ready(function () {
                            $("#myInput").on("keyup", function () {
                                var value = $(this).val().toLowerCase();
                                $("#myTable tr").filter(function () {
                                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                });
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="search-list">
            <h3> Invoice List </h3>
            <table class="table" id="myTable">
                <thead>
                    <%= link_to new_invoice_path(category:"new_invoice") do %>
                        <div class="btn btn-primary btn-xs pull-right mx-3"><b>+</b> Add new Invoice  </div>
                    <% end %>
                            <tr>
                                <th> Date </th>
                                <th> Bill No.</th>
                                <th> Subject</th>
                                <th> </th>
                            </tr>
                </thead>

                <tbody>

                    <% @invoice.each do |invoice| %>
                        <tr>
                            <td>
                                <%= invoice.date %>
                            </td>

                            <td>
                                <%= invoice.bill_number %>
                            </td>
                            <td>
                                <%= invoice.subject %>
                            </td>

                            <td>
                                <%= link_to invoice_path(invoice) do %>
                                    <div class='btn btn-secondary btn-xs'> view </div>
                                <% end %>
                            </td>

                            <td>
                                <%= link_to edit_invoice_path(invoice) do %>
                                    <div class='btn btn-info btn-xs'> Edit</div>
                                <% end %>
                            </td>

                            <td>
                                <%= link_to invoice, method: :delete, data: {
                                    confirm: "Do you want to delete this record?" } do %>
                                    <div class='btn btn-danger btn-xs'> Delete </div>
                                <% end %>
                            </td>

                        </tr>
                    <% end %>

                </tbody>
            </table>

        </div>
    </div>
</body>