<html lang="en">

<head>
    <title>Estimate Bills</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,700" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/A.style.css.pagespeed.cf.PlwJDa5bmm.css">
    <script src="chrome-extension://mooikfkahbdckldjjndioackbalphokd/assets/prompt.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body>


    <div class="container search-table">
        <div class="search-box">
            <div class="row">
                <div class="col-md-3">
                    <h5>Search </h5>
                </div>
                <div class="col-md-9">
                    <input type="text" id="myInput" onkeyup="myFunction()" class="form-control"
                        placeholder="Search for Bills ">
                    <script>
                        $(document).ready(function () {
                            $("#myInput").on("keyup", function () {
                                var value = $(this).val().toLowerCase();
                                $("#myTable tr").filter(function () {
                                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                });
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="search-list">
            <h3> Bills List </h3>
            <table class="table" id="myTable">
                <thead>
                    <%= link_to new_estimate_path(category:"estimate") do %>
                        <div class="btn btn-primary btn-xs pull-right mx-3"><b>+</b> Add new estimate information </div>
                        <% end %>
                            <tr>
                                <th> Date </th>
                                <th> Bill No.</th>
                                <th> Subject</th>
                                <th> </th>
                            </tr>
                </thead>

                <tbody>

                    <% @estimate.each do |estimate| %>
                        <tr>
                            <td>
                                <%= estimate.date %>
                            </td>

                            <td>
                                <%= estimate.bill_number %>
                            </td>
                            <td>
                                <%= estimate.subject %>
                            </td>

                            <td>
                                <%= link_to estimate_path(estimate) do %>
                                    <div class='btn btn-secondary btn-xs'> view </div>
                                    <% end %>
                            </td>

                            <td>
                                <%= link_to edit_estimate_path(estimate) do %>
                                    <div class='btn btn-info btn-xs'> Edit</div>
                                    <% end %>
                            </td>

                            <td>
                                <%= link_to estimate, method: :delete, data: {
                                    confirm: "Do you want to delete this record?" } do %>
                                    <div class='btn btn-danger btn-xs'> Delete </div>
                                    <% end %>
                            </td>

                        </tr>
                        <% end %>

                </tbody>
            </table>

        </div>
    </div>
</body>