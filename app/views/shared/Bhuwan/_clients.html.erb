
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="container search-table">
    <div class="search-box">
        <div class="row">
            <div class="col-md-3">
                <h5>Search </h5>
            </div>
            <div class="col-md-9">
                <input type="text" id="myInput" onkeyup="myFunction()" class="form-control"
                    placeholder="Search for clients ">
                <script>
                    $(document).ready(function () {
                        $("#myInput").on("keyup", function () {
                            var value = $(this).val().toLowerCase();
                            $("#myTable tr").filter(function () {
                                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                            });
                        });
                    });
                </script>
            </div>
        </div>
    </div>
    <div class="search-list">
        <h3> Clients Details </h3>
        <table class="table" id="myTable">
            <thead>
                <%= link_to new_client_path do %>
                    <div class="btn btn-primary btn-xs pull-right mx-3"><b>+</b> Add new client information </div>
                    <% end %>
                        <tr>
                            <th> Name </th>
                            <th> Address</th>
                            <th> Phone</th>
                            <th> </th>
                        </tr>
            </thead>
            <tbody>

                <% @client.each do |client| %>
                    <tr>
                        <td>
                            <%= client.name %>
                        </td>
                        <td>
                            <%= client.address %>
                        </td>
                        <td>
                            <%= client.phone %>
                        </td>
                        <td>
                            <%= link_to edit_client_path(client) do %>
                                <div class='btn btn-info btn-xs'> Edit</div>
                                <% end %>
                        </td>

                        <td>
                            <%= link_to client, method: :delete, data: { confirm: "Do you want to delete this record?" }  do %>
                                
                                <div class='btn btn-danger btn-xs'> Delete </div>
                                <% end %>
                        </td>

                    </tr>
                <% end %>

            </tbody>
        </table>

    </div>
</div>