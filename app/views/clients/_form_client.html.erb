    <div class="container mx-auto">
                <div class="align-self-center card login__card shadow-sm w-100">
                   <h4 class="text-muted p-4"> Clients </h4>
                    <div class="card-body">
                    <%= form_for @client, remote:true do |f|%>

                    <div class="row">
                    <div class="col-md-8 col-xs-12">
                         <div class="form-group">
                            <label class="strong">Client Name  </label>
                            <%= f.text_field :name, class:"form-control", required:true %>
                            </div>
                    </div>
                    
                    <div class="col-md-8 col-xs-12">
                         <div class="form-group pt-2">
                            <label class="strong"> Address </label>
                            <%= f.text_field :address, class:"form-control", required:true %>
                            </div>
                         
                    </div>

                       <div class="col-md-8 col-xs-12">
                         <div class="form-group pt-2">
                            <label class="strong"> Phone  </label>
                            <%= f.text_field :phone, class:"form-control", required:true %>
                            </div>
                         
                    </div>

                    <div class="col-md-8 col-xs-12">
                        <%= f.submit class:"btn btn-primary"%>
                    </div>
                    </div>
                    <% end %>     
                </div>
       </div>
       </div>
       