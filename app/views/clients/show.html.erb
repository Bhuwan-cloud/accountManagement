<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script type="text/JavaScript" src="https://cdnjs.cloudflare.com/ajax/libs/jQuery.print/1.6.0/jQuery.print.js"></script>

<body style="background:rgb(198, 223, 231)">

    <div class="container search-table" style=" padding-left: 0; padding-right: 0; display: flex; flex-wrap: wrap;">
        <div class="search-box" style="width: 100%; background-color: rgb(243, 238, 194);">
            <div class="row">

                <!-------------name of client ------------------>
                <div class="col text-center">
                    <h4>
                        <%= @client.name %>
                    </h4>

                    <!------address ----------------->
                    <p> <strong>
                            <%= @client.address %>
                        </strong>
                    <p>
                </div>
            </div>
        </div>
        <div class="search-list">
            <table class="table" style="display: flex; flex-wrap: wrap;">
                <thead style="display: contents; flex-wrap:wrap;">
                    <tr>
                        <th style="width: 380px;"> Project Name </th>
                        <th style="width: 280px;"> Team Members </th>
                        <th style="width: 180px;"> Started Date </th>
                        <th> Completed Date </th>
                    </tr>
                </thead>
                <tbody style="display: flex;">

                    <tr style="display: flex; flex-wrap: wrap;">
                        <td style="width: 380px;">
                            <div class="myDiv">
                                <!-------------------------------main project name ---------------------->
                                <p class="font-monospace mx-2 my-2"> <strong>
                                        <%= @client.project %> First Project
                                    </strong></p>
                                <!----------subtasks------------>
                                <ul>
                                    <li> SM Installation</li>
                                    <li> AP Installation</li>
                                    <li> Firewall Configuration </li>
                                </ul>
                                <!----------------------------->
                            </div>
                        </td>
                        <td style="width: 280px;">
                            <!---------------members--------------------->
                            <div class="myDiv">
                                <span class="badge bg-dark"> Bhuwan Bhatt </span>
                                <span class="badge bg-dark"> Bishisth Bhatt </span>
                                <span class="badge bg-dark"> Rabin Nath </span>
                                <span class="badge bg-dark"> Parixit Rokaya </span>
                                <span class="badge bg-dark"> Bhoj Sigh Karki </span>
                            </div>
                        </td>

                        <td style="width: 180px;">
                            <!---------------------start date ---------------->
                            <div class="myDiv">
                                <span class="badge bg-primary"> 2077 / Magh /3 </span>
                            </div>
                        </td>

                        <td>
                            <!-------------completed date -------------------->
                            <div class="myDiv">
                                <span class="badge bg-success"> 2077 / Magh / 10 </span>
                            </div>
                        </td>

                        <td style="flex-wrap: wrap; display: flex;">

                            <!------------button for bill's dropdown --------->

                            <button onclick="myFunction()" class="btn btn-danger"
                                style="margin-left: 20px; margin-bottom: 5px; top: 0; height: min-content;">
                                Show the Bills
                            </button>
                            <div id="bill"
                                style=" margin: 10px; flex-grow:1 ;display: none; min-width: 210mm; height: 297mm; border: 2px solid rgb(121, 92, 92);">

                                <!--put your bills here -->
                                <%= @estimates %>
                                    <style>
                                        /* Hiding print button while printing */
                                        @media print {
                                            #print {
                                                display: none;
                                            }
                                        }
                                    </style>
                                    <button id="print" class="btn btn-primary">Print</button>
                                    <script>

                                        $("#print").on('click', function () {
                                            $("#bill").print();
                                        });
                                    </script>

                            </div>
                            <!-------javascript for show hide effect ----->
                            <script>
                                function myFunction() {
                                    var x = document.getElementById("bill");
                                    if (x.style.display === "none") {
                                        x.style.display = "";
                                    }
                                    else {
                                        x.style.display = "none";
                                    }
                                }
                            </script>
                            <!------------------------------------------------>
                        </td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>
</body>