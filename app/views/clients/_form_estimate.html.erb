<% if @quot_num.nil?%>
    <% quoat_number = "Quot_"+ Date.today.year.to_s + "_" + "1" %>
<% else %>
    <% quoat_number = "Quot_"+ Date.today.year.to_s + "_" + (@quot_num.id + 1).to_s %>
<% end %>


<div class="container">
<%= form_for @quotation do |f| %>
<div class="row">
    <div class="col-4 form-group">
        <label class="strong">Customer</label>
        <%= f.text_field :customer, class:"form-control" %>
    </div>
    <div class="col-4 form-group">
         <label class="strong">Date</label>
         <input type="date" name="quotation[date]" id="quotation[date]" max="3000-12-31" min="2000-01-01" class="form-control">
    </div>
    <div class="col-4 form-group">
        <label class="strong">Quotation Number</label>
         <%= f.text_field :quote_num, class:"form-control",value:quoat_number, readonly: true %>
    </div>
</div>
<!------------------------------------------------------------------------------------------------------------------------->
    <div class="row clearfix">
    	<div class="col-md-12 table-responsive">
			<table class="table table-bordered table-hover table-sortable" id="tab_logic">
				<thead>
					<tr >
						<th class="text-center" style="width: 36%">
							Item
						</th>
						<th class="text-center" style="width: 12%">
							Qty.
						</th>
						<th class="text-center" style="width: 15%">
							Unit Price
						</th>
    					<th class="text-center" style="width: 12%">
							Tax
						</th>
                        <th class="text-center" style="width: 20%">
							Amount
						</th>
        				<th class="text-center" style="border-top: 1px solid #ffffff; border-right: 1px solid #ffffff; width:5%">
						</th>
					</tr>
				</thead>
				<tbody>
                <%= f.fields_for :quote do |b| %>
    				<tr id='addr0' data-id="0" class="hidden">
                                <td data-name="item">
                                   <%= b.text_field :item, placeholder:"Item",class:"form-control" %>
                                </td>
                                <td data-name="quantity">
                                    <%= b.number_field :quantity, placeholder:"Qty",class:"calculations form-control" %>
                                </td>
                                <td data-name="unit_price">
                                    <%= b.number_field :unit_price, placeholder:"Unit Price",class:"calculations form-control" %>
                                </td>
                                <td data-name="tax">
                                    <%= b.select :tax, options_for_select([["VAT(13%)","13"], ["Income"], ["Sales"]]),class:'calculations form-control' %>
                                </td>
                                <td data-name="amount">
                                    <%= b.text_field :amount,class:"amount form-control",readonly: true %>
                                </td>
                                <td data-name="del">
                                    <button name="del0" class='btn btn-danger glyphicon glyphicon-remove row-remove'><span aria-hidden="true">Ã—</span></button>
                                </td>
					    </tr>
                    <% end%>
				</tbody>
			</table>
		</div>
	</div>
    <hr />
    <div class="d-flex flex-row-reverse bd-highligh">
        <div class="form-group row flex-v-center">
      <div class="mt-2 pr-2">
            <p>Total:</p>
        </div>
        <div>
            <%= f.text_field :total,class:"total form-control float-right",readonly: true %>
        </div>
    </div>
    </div>

    
	<a id="add_row" class="btn btn-primary float-right">Add Row</a>
