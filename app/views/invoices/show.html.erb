<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script type="text/JavaScript" src="https://cdnjs.cloudflare.com/ajax/libs/jQuery.print/1.6.0/jQuery.print.js"></script>

<body>

    <!------------------------salutation  ------------------------------------------>
    <div class="container border" id="print-container">
                <div class="row">
                    <div class="col-12">
                         <div class="my-3 mx-3"> <button class="btn btn-secondary" id="print" >Print Invoice</button> </div>
                         <script>

                                        $("#print").on('click', function () {
                                            $("#print-container").print();
                                        });
                        </script>
                        <div class="row p-5">
                            <div class="col-md-6 text-center">
                                <div class="d-flex flex-row bd-highlight mb-3 text-center" style="height: 45px;">
                                    <div class="p-2 bd-highlight">
                                        <h1 class=""> <strong> NARMADA </strong> </h1> 
                                    </div>
                                    <div class="p-2 bd-highlight">
                                    <h1 class="text-danger"> <strong> INFOSYS</strong> </h1>
                                    </div>
                                </div>
                                <p class="mb-1"> <h4> <strong> "Complete IT Solutions" </strong>  </h4></p>
                                <p class="mb-1"> Aithpur-6 , Bhimdattnagar</p>
                                <p class="mb-1"> Kanchanpur , Nepal</p>
                                <p class="mb-1">  099-402068 , 9805769058  </p>
                            </div>
                    
                               <div class="col-md-6 text-right">
                                    <p class="font-weight-bold mb-1"> Invoice No: <%= @invoice.bill_number %> </p>
                                    <p > Date :  <%= @invoice.date %> </p>
                                </div>
                        </div>
                      
                                        <hr >

                                        <p class="text-center font-weight-bold">   Subject of Invoice : <u> <%= @invoice.subject %> </u> </p>

                                        <div class="row pb-5 p-5">
                                            <div class="col-md-6">
                                                <p class="font-weight-bold mb-4">Client Information </p>
                                                <p class="mb-1 font-italic"> <%= @invoice.client_name %> , 
                                                <%= @invoice.client_designation %>  </p>
                                                <p class="mb-1"> <%= @invoice.office_name %> </p>
                                                <p class="mb-1"> <%= @invoice.client_address %></p>
                                                <p class="mb-1"> <%= @invoice.client_phone %></p>
                                            </div>

                                            <div class="col-md-6 text-right">
                                                <p class="font-weight-bold mb-4">Payment Details</p>
                                                <p class="mb-1"><span class="text-muted" >VAT NO: </span> <%= @invoice.vat_no %> </p>
                                                <p class="mb-1"><span class="text-muted">Payment Type: </span> 
                                                <%= @invoice.payment_type %> </p>
                                                <p class="mb-1"><span class="text-muted"> Adminstrator Name: </span> 
                                                <%= @invoice.admin_name %> </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <!-------------------------------invoice form ----------------------------------------->
                            <div class="container">
                            <div class="row clearfix">
                                <div class="col-md-12">
                                <table class="table table-bordered table-hover" id="tab_logic">
                                    <thead>
                                    <tr>
                                        <th class="text-center"> SN </th>
                                        <th class="text-center"> Item </th>
                                        <th class="text-center"> Qty </th>
                                        <th class="text-center"> Price </th>
                                        <th class="text-center"> Total </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr id='addr0'>
                                        <td>1</td>
                                        <td><%= @invoice.description %></td>
                                        <td><%= @invoice.quantity  %></td>
                                        <td><%= @invoice.rate %></td>
                                        <td><%= @invoice.total %></td>
                                    </tr>
                                    <tr id='addr1'></tr>
                                    </tbody>
                                </table>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top:20px">
                                <div class=" col-md-4" style="margin-left:30em">
                                <table class="table table-bordered table-hover" id="tab_logic_total">
                                    <tbody>
                                    <tr>
                                        <th class="text-center">Sub Total</th>
                                        <td class="text-center"><%= @invoice.sub_total %></td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">Tax</th>
                                        <td class="text-center"><div class="input-group mb-2 mb-sm-0">
                                            <%= @invoice.tax %>
                                        </div></td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">Tax Amount</th>
                                        <td class="text-center"><%= @invoice.tax_amount %></td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">Grand Total</th>
                                        <td class="text-center"><%= @invoice.grand_total %></td>
                                    </tr>
                                    </tbody>
                                </table>
                                </div>
                            </div>
                </div>

    </div>

    <!-------------------------------------------------------------------------------------->
</body>